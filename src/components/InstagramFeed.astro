---
const { lang } = Astro.props;

const content = {
  en: {
    title: "Student Showcase",
    description: "See what my students are creating with the techniques from this course",
    cta: "Share Your Work",
    hashtag: "#WatercolorWithIwa"
  },
  pl: {
    title: "Prace Studentów",
    description: "Zobacz co tworzą moi studenci technikami z tego kursu",
    cta: "Pokaż Swoją Pracę",
    hashtag: "#AkwarelaZIwą"
  }
};

const t = content[lang];

// Simulated student works data
const posts = [
  { week: 1, author: "Lisa M.", technique: "Wet on Wet" },
  { week: 2, author: "James K.", technique: "Layering" },
  { week: 3, author: "Maria S.", technique: "Color Mixing" },
  { week: 4, author: "Alex P.", technique: "Texture Effects" },
  { week: 5, author: "Sophie L.", technique: "Gradients" },
  { week: 6, author: "David R.", technique: "Nature Studies" }
];
---

<section class="py-20 bg-gradient-to-b from-white to-watercolor-cream overflow-hidden">
  <div class="container mx-auto px-4">
    <div data-scroll class="text-center mb-12">
      <h2 class="text-4xl font-bold text-watercolor-brown mb-4 brush-stroke inline-block">
        {t.title}
      </h2>
      <p class="text-xl text-watercolor-brown-light max-w-2xl mx-auto">
        {t.description}
      </p>
    </div>

    <div class="relative" data-scroll>
      <div class="flex gap-6 overflow-x-auto pb-8 snap-x snap-mandatory scrollbar-hide">
        {posts.map((post, index) => (
          <div 
            class="flex-none w-80 watercolor-card overflow-hidden snap-center"
            style={`animation-delay: ${index * 150}ms`}
          >
            <div class="relative">
              <div class="aspect-square student-work bg-gradient-to-br from-watercolor-sand via-watercolor-rose to-watercolor-terra"></div>
              <div class="absolute top-3 right-3 bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full text-sm text-watercolor-brown-light">
                Week {post.week}
              </div>
            </div>
            <div class="p-4">
              <div class="flex justify-between items-center mb-2">
                <span class="font-medium text-watercolor-brown">{post.author}</span>
                <span class="text-sm text-watercolor-brown-light">{post.technique}</span>
              </div>
            </div>
          </div>
        ))}
      </div>

      <div class="absolute left-0 top-0 bottom-8 w-8 bg-gradient-to-r from-white to-transparent pointer-events-none"></div>
      <div class="absolute right-0 top-0 bottom-8 w-8 bg-gradient-to-l from-white to-transparent pointer-events-none"></div>
    </div>

    <div data-scroll class="text-center mt-12">
      <a href="#" class="btn-watercolor inline-flex items-center gap-2">
        <span>{t.cta}</span>
        <span class="text-watercolor-brown-light font-medium">{t.hashtag}</span>
      </a>
    </div>
  </div>
</section>

<style>
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style>